{
	"extends": "./tsconfig.base.json",
	"include": [
		"./src/**/*",
		"./types/**/*"
	],
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types",
			"../../node_modules/@types",
			"types/declaration.d.ts"
		],
		"types": [
			"node",
			"jest",
			"express"
		],
		"declarationDir": "./build",
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./build",
		"tsBuildInfoFile": "./build/.tsbuildinfo",
		"paths": {
			"*": ["./*"]
		},
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"emitDeclarationOnly": true
	},
}
