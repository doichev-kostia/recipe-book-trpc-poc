{
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types",
			"../../node_modules/@types",
			"types/declaration.d.ts"
		],
		"types": [
			"node",
			"jest",
			"express"
		],
		"composite": true,
		"target": "ESNext",
		"module": "commonjs",
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"declaration": true,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"incremental": true,
		"tsBuildInfoFile": "./build/.cache/buildInfo.json",
		"lib": [
			"es2019",
			"es6",
			"dom",
			"dom.iterable"
		],
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"*": [
				"./*"
			],
			"@trpc-poc/contracts": [
				"../../packages/contracts/src"
			]
		},
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": [
		"./src/**/*",
		"./types/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
	],
	"references": [
		{
			"path": "../../packages/contracts/tsconfig.json"
		}
	]
}
