{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "Node",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"allowJs": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"tsBuildInfoFile": "./build/.cache/buildInfo.json",
		"lib": [
			"es2019",
			"es6",
			"dom",
			"dom.iterable"
		],
		"baseUrl": "src",
		"paths": {
			"*": [
				"./*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
