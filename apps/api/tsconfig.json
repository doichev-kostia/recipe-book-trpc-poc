{
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types",
			"../../node_modules/@types",
			"types/declaration.d.ts"
		],
		"types": [
			"node",
			"jest",
			"express"
		],
		"composite": true,
		"target": "es2020",
		"module": "es2020",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./build",
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
//		"emitDeclarationOnly": true,
		"incremental": true,
		"tsBuildInfoFile": "./build/.cache/buildInfo.json",
		"lib": [
			"es2019",
			"es6",
			"dom",
			"dom.iterable"
		],
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./build",
		"paths": {
			"*": ["./*"]
		},
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": [
		"./src/**/*",
		"./types/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
	]
}
