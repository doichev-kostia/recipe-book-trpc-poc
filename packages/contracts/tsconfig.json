{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "Node",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"tsBuildInfoFile": "./build/.tsbuildinfo",
		"allowJs": true,
		"strict": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"baseUrl": "src",
		"paths": {
			"bodies": ["./bodies"],
			"enums": ["./enums"],
			"queries": ["./queries"],
			"views": ["./views"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
