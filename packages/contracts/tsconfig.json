{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"tsBuildInfoFile": "./build/.tsbuildinfo",
		"composite": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"emitDeclarationOnly": true,
		"allowJs": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"rootDir": "./src"
	},
	"include": [
		"src/**/*",
		"declarations/*"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
